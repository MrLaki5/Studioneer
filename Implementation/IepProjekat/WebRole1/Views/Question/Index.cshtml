@model IEnumerable<WebRole1.Models.Parameter>
@{
    ViewBag.Title = "Write Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>WriteQuestion</h2>

<form id="Forma" method="post" enctype="multipart/form-data" runat="server">
    @Html.AntiForgeryToken()
    

    @Html.ValidationSummary("", new { @class = "text-danger center" })

    <div class="form-group">
        @Html.Label("Naslov:")
        @Html.TextBox("naslov", null, new { @class = "form-control", @name = "naslov" })
    </div>

    <div class="form-group">
        <label for="text">Question Text:</label>
        <textarea class="form-control" rows="5" id="text"></textarea>
    </div>

    <div class="form-group">
       <input type="file" name="file" id="file" />
    </div>
    

    @for(var i = 1; i < 4; i++)
    { <div class="input-group">
            <span class="input-group-addon">Answer</span>
            <input id="msg" type="text" class="form-control" name="msg" placeholder="Additional Info"> 
          &nbsp<label class="checkbox-inline"><input type="checkbox" value="">Select Correct Answer</label>
        </div>
    }


</form>